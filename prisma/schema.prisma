// Prisma schema for CRM
// For Vercel: use PostgreSQL (Vercel Postgres / Neon)
// For local dev: use SQLite

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Client {
  id        String   @id @default(cuid())
  name      String
  email     String?
  company   String?
  slug      String   @unique // unique link: /client/[slug]
  createdAt DateTime @default(now())
  tasks     Task[]
}

model Task {
  id          String   @id @default(cuid())
  title       String
  description String?
  status      String   @default("TODO") // TODO, IN_PROGRESS, IN_REVIEW, DONE
  priority    String   @default("MEDIUM") // LOW, MEDIUM, HIGH, URGENT
  clientId    String
  client      Client         @relation(fields: [clientId], references: [id], onDelete: Cascade)
  comments    TaskComment[]
  voiceNotes  VoiceNote[]
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
}

model TaskComment {
  id        String   @id @default(cuid())
  content   String
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  author    String   // "client" or "you"
  createdAt DateTime @default(now())
}

model VoiceNote {
  id       String   @id @default(cuid())
  url      String   // Vercel Blob URL or base64
  taskId   String
  task     Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  duration Int      @default(0) // seconds
  createdAt DateTime @default(now())
}

